<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_car_add_color"
            android:textSize="@dimen/Small_font" />

        <TextView
            android:id="@+id/text_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_my_light"
            android:textSize="@dimen/Small_Middle_font" />

        <TextView
            android:id="@+id/text_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_my_light"
            android:textSize="@dimen/Smallest_font" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="3dip"
            android:layout_height="0dip"
            android:layout_weight="0.1"
            android:background="@color/green_color" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vio_green" />

        <ImageView
            android:layout_width="3dip"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@color/green_color" />

        <TextView
            android:id="@+id/bottom_line_iv"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@drawable/ic_vio_gray"
            android:textColor="@color/white"
            android:visibility="gone" />

        <ImageView
            android:layout_width="5dip"
            android:layout_height="0dip"
            android:layout_weight="0.1"
            android:background="@color/gray_line"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dip"
        android:background="@drawable/trip_item_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_car_add_color"
                    android:textSize="@dimen/Middle_font" />

                <TextView
                    android:id="@+id/text_info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_car_add_color"
                    android:textSize="@dimen/Middle_font" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/ic_vio_location" />

                <TextView
                    android:id="@+id/text_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:textColor="@color/font_car_add_color"
                    android:textSize="@dimen/Small_font" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/ic_vio_result" />

                <TextView
                    android:id="@+id/text_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:drawablePadding="5dip"
                    android:textColor="@color/font_car_add_color"
                    android:textSize="@dimen/Small_font" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>