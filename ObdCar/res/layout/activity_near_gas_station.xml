<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:gravity="center_vertical"
        android:minHeight="40dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_distance_sort"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:padding="10dip"
            android:text="@string/text_distance_sort"
            android:textColor="@color/top_bar_color"
            android:textSize="@dimen/Middle_font" />

        <TextView
            android:id="@+id/btn_price_sort"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/listview_bg"
            android:gravity="center"
            android:padding="10dip"
            android:text="@string/text_price_sort"
            android:textColor="@color/top_bar_color"
            android:textSize="@dimen/Middle_font" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/listview_bg"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:divider="@color/interval"
            android:dividerHeight="1dip"
            android:listSelector="@color/transparent" >
        </ListView>
    </LinearLayout>

</LinearLayout>