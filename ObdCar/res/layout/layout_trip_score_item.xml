<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_end_hour"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="9月11号"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Small_font" />

            <TextView
                android:id="@+id/top_line_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/ic_score_good_bg"
                android:gravity="center"
                android:text="终"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_end_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9月11号"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Small_font" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_end_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9月11号"
                    android:textColor="@color/gray_my_light"
                    android:textSize="@dimen/Smallest_font" />

                <TextView
                    android:id="@+id/text_end_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9月11号"
                    android:textColor="@color/gray_my_light"
                    android:textSize="@dimen/Smallest_font" />

                <TextView
                    android:id="@+id/text_start_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="9月11号"
                    android:textColor="@color/gray_my_light"
                    android:textSize="@dimen/Smallest_font" />

                <TextView
                    android:id="@+id/text_start_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_my_light"
                    android:textSize="@dimen/Smallest_font"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="20dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="center_horizontal" >

                <ImageView
                    android:layout_width="3dip"
                    android:layout_height="match_parent"
                    android:src="@color/green_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_car_add_color"
                    android:textSize="@dimen/Small_font" />

                <RatingBar
                    android:id="@+id/ratingbar"
                    style="@style/MyRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="2" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_start_hour"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12:20"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Small_font" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/bottom_line_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/ic_score_good_bg"
                    android:gravity="center"
                    android:text="始"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="4dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dash_line" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_start_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="9月11号"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Small_font" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/arrow" />

</LinearLayout>