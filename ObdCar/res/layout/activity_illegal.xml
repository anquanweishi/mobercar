<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_gray"
    android:orientation="vertical" >

    <include layout="@layout/top_bar" />

    <LinearLayout
        android:id="@+id/layout_loc_plate"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="2dip"
        android:background="@drawable/btn_blue_bg_no_round"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/img_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip" />

        <TextView
            android:id="@+id/title_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/Max_Large_font" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_plate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/interval" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="40dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/text_car_plate"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Middle_font" >
            </TextView>

            <TextView
                android:id="@+id/car_plate_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:drawableRight="@drawable/arrow_down"
                android:text="吉"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Middle_font" >
            </TextView>

            <EditText
                android:id="@+id/edit_plate"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/limit_input_text"
                android:ems="10"
                android:hint="@string/text_car_plate_hint"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:textSize="@dimen/Middle_font" >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/interval" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/interval" />

        <LinearLayout
            android:id="@+id/layout_drive_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="40dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/text_car_driviing"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Middle_font" >
            </TextView>

            <TextView
                android:id="@+id/text_drive_area"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:hint="@string/text_car_driving_hint"
                android:singleLine="true"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Middle_font" >
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/interval" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/interval" />

        <LinearLayout
            android:id="@+id/layout_plate_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="40dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/text_car_plate_type"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Middle_font" >
            </TextView>

            <TextView
                android:id="@+id/text_plate"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:hint="@string/text_car_plate_type_hint"
                android:singleLine="true"
                android:text="小型车"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Middle_font" >
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/interval" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_engine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/interval" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="40dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/text_car_engine"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Middle_font" >
            </TextView>

            <EditText
                android:id="@+id/edit_engine"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/limit_input_text"
                android:ems="10"
                android:hint="@string/text_car_engine_hint"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:textSize="@dimen/Middle_font" >
            </EditText>

            <ImageView
                android:id="@+id/btn_engine_refer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:src="@drawable/ic_refer" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/interval" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_vin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/interval" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="40dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/text_car_vin"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Middle_font" >
            </TextView>

            <EditText
                android:id="@+id/edit_vin"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="@string/text_car_vin_hint"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:textSize="@dimen/Middle_font" >
            </EditText>

            <ImageView
                android:id="@+id/btn_vin_refer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:src="@drawable/ic_refer" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/interval" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_resiter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/interval" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="40dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/text_car_regist"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Middle_font" >
            </TextView>

            <EditText
                android:id="@+id/edit_register"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="@string/text_car_regist_hint"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:textSize="@dimen/Middle_font" >
            </EditText>

            <ImageView
                android:id="@+id/btn_regist_refer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:src="@drawable/ic_refer"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/interval" />
    </LinearLayout>

</LinearLayout>