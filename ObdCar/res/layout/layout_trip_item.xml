<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_end_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Small_font" />

            <TextView
                android:id="@+id/text_end_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_my_light"
                android:textSize="@dimen/Smallest_font" />

            <TextView
                android:id="@+id/text_end_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_my_light"
                android:textSize="@dimen/Smallest_font" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_start_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_my_light"
                android:textSize="@dimen/Smallest_font" />

            <TextView
                android:id="@+id/text_start_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Small_font" />

            <TextView
                android:id="@+id/text_start_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_my_light"
                android:textSize="@dimen/Smallest_font"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/top_line_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_score_good_bg"
            android:gravity="center"
            android:text="终"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="3dip"
            android:layout_height="0dip"
            android:layout_weight="0.1"
            android:background="@color/green_color" />

        <ImageView
            android:id="@+id/img_running"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_running"
            android:visibility="gone" />

        <ImageView
            android:layout_width="3dip"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@color/green_color" />

        <TextView
            android:id="@+id/bottom_line_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_score_good_bg"
            android:gravity="center"
            android:text="始"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="4dip"
            android:layout_height="0dip"
            android:layout_weight="0.12"
            android:background="@drawable/dash_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_end_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/font_car_add_color"
            android:textSize="@dimen/Small_font" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:background="@drawable/trip_item_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_cost_oil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/font_car_add_color"
                    android:textSize="@dimen/Middle_font" />

                <TextView
                    android:id="@+id/text_price_oil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/font_car_add_color"
                    android:textSize="@dimen/Middle_font" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/font_car_add_color"
                    android:textSize="@dimen/Small_Normal_font" />

                <TextView
                    android:id="@+id/text_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/font_car_add_color"
                    android:textSize="@dimen/Small_Normal_font" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_idle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="怠速：00秒"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Small_Normal_font" />

            <TextView
                android:id="@+id/text_speed_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="最高时速：0公里/小时"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Small_Normal_font" />

            <TextView
                android:id="@+id/text_speed_avg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均时速：0公里/小时"
                android:textColor="@color/font_car_add_color"
                android:textSize="@dimen/Small_Normal_font" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" >

                <LinearLayout
                    android:id="@+id/btn_trip"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:background="@drawable/ic_trip_location_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:text="@string/btn_trip"
                        android:textColor="@color/gray_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_score"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:background="@drawable/ic_score_bad_bg"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:lines="2"
                        android:text="@string/btn_score"
                        android:textColor="@color/gray_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_fuel"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:background="@drawable/ic_fuel_bg"
                        android:gravity="center"
                        android:padding="5dip"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:text="@string/btn_fuel"
                        android:textColor="@color/gray_line" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_start_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:ellipsize="end"
            android:minHeight="40dip"
            android:singleLine="true"
            android:textColor="@color/font_car_add_color"
            android:textSize="@dimen/Small_font" />
    </LinearLayout>

</LinearLayout>