<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/layout_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:minHeight="40dip"
        android:orientation="vertical"
        android:padding="10dip"
        android:textColor="@color/font_car_add_color"
        android:textSize="@dimen/Middle_font"
        android:visibility="gone" >
    </TextView>

    <LinearLayout
        android:id="@+id/layout_offline_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/top_bar_color"
                    android:textSize="@dimen/Middle_font" />

                <TextView
                    android:id="@+id/text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/text_gray_color"
                    android:textSize="@dimen/Middle_font" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/Middle_font" />

            <ImageButton
                android:id="@+id/btn_download"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:background="@null"
                android:src="@drawable/ic_download_default" />

            <Button
                android:id="@+id/btn_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue_bg_no_round"
                android:text="查看"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>