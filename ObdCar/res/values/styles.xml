<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ProgressBar_Horizontal_Web">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:progressDrawable">@drawable/progress_web_load</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">3dip</item>
    </style>
    <!-- 默认dialog动画 -->
    <style name="theme_dialog_default" parent="android:Theme.Dialog">

        <!-- Window attributes -->
        <item name="android:windowAnimationStyle">@style/animation_dialog_default</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="animation_dialog_default">
        <item name="android:windowEnterAnimation">@anim/push_right_in</item>
        <item name="android:windowExitAnimation">@anim/push_left_out</item>
    </style>

    <style name="Progress_Pull_List">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_pull_list</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">19dip</item>
        <item name="android:minHeight">19dip</item>
    </style>

    <style name="Progress_Get_More" parent="Progress_Pull_List">
        <item name="android:minWidth">15dip</item>
        <item name="android:maxWidth">15dip</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

    <style name="Progress_Default_Load" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_load</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">23dip</item>
        <item name="android:maxWidth">23dip</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">23dip</item>
    </style>

    <!-- 页面出现和隐藏主题 -->
    <style name="Theme_Activity_Right_In_Right_Out" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/Animation_Activity_Right_In_Right_Out</item>
    </style>

    <style name="Animation_Activity_Right_In_Right_Out" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_left_in</item>
    </style>

    <!-- dialog窗口动画 -->
    <style name="dialog_anim">
        <item name="android:windowEnterAnimation">@anim/window_out</item>
        <item name="android:windowExitAnimation">@anim/window_in</item>
    </style>

    <style name="MMLineActionButton">
        <item name="android:textSize">16dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/mm_style_one_btn_text</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="DataSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_down_in</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/food_rating_bar_full</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:maxHeight">18dip</item>
    </style>

    <!-- chat -->
    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/msg_bg_time</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>
   <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

</resources>