<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <gradient android:angle="270" android:endColor="#9d190c" android:startColor="#9d190c" />

            <padding android:bottom="5dip" android:left="5dip" android:right="5dip" android:top="5dip" />

            <stroke android:width="2dip" android:color="#9d190c" />
            
            <size android:height="40dip"/>
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <gradient android:angle="270" android:endColor="#ff1e00" android:startColor="#ff1e00" />

            <padding android:bottom="5dip" android:left="5dip" android:right="5dip" android:top="5dip" />

            <stroke android:width="2dip" android:color="#ff1e00" />
            <size android:height="40dip"/>
        </shape></item>

</selector>
