<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <gradient android:startColor="#e36552"
                android:endColor="#e36552"/>
            <padding android:left="10dip" android:top="10dip"
                android:right="10dip" android:bottom="10dip"/>
        </shape>
        
    </item>
    <item android:state_pressed="true">
         <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <gradient android:startColor="#79362b"
                android:endColor="#79362b"/>
  			<padding android:left="10dip" android:top="10dip"
                android:right="10dip" android:bottom="10dip"/>
        </shape>
    </item>

</selector>
