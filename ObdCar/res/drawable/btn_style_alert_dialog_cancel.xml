<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
         <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <gradient android:startColor="@color/home_recure_cancel_click"
                android:endColor="@color/home_recure_cancel_click"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <gradient android:startColor="@color/home_recure_cancel_normal"
                android:endColor="@color/home_recure_cancel_normal"/>
        </shape>
    </item>

</selector>