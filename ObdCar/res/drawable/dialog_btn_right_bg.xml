<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <gradient android:startColor="#5788ac"
                android:endColor="#5788ac"/>
            <padding android:left="10dip" android:top="10dip"
                android:right="10dip" android:bottom="10dip"/>
        </shape>
        
    </item>
    <item android:state_pressed="true">
         <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <gradient android:startColor="#2c495a"
                android:endColor="#2c495a"/>
            <padding android:left="10dip" android:top="10dip"
                android:right="10dip" android:bottom="10dip"/>
        </shape>
    </item>

</selector>
